{
  "name": "pwa",
  "version": "0.0.0",
  "description": "An opinionated progressive web app boilerplate",
  "author": "Lakshya Ranganath <lakshya.ranganath@gmail.com>",
  "keywords": [
    "pwa",
    "react",
    "redux",
    "universal",
    "boilerplate",
    "server side rendering",
    "service worker",
    "jest",
    "tests"
  ],
  "main": "server/index.js",
  "scripts": {
    "start": "npm run build:clean && mkdir -p ./build/server/ && touch ./build/server/index.js && npm run local",
    "stop": "pm2 delete pm2.json && rimraf npm-debug.log* babel_cache",
    "local": "PWA_ENV=local PWA_PUBLIC_PATH=http://localhost:8080/build/client/ PWA_SSR=false NODE_ENV=development PORT=8000 webpack-dashboard -- run-p local:*",
    "local:client": "webpack-dev-server --config ./webpack.client.js --content-base ./build/client/ --hot --quiet",
    "local:server": "webpack --config ./webpack.server.js --watch",
    "local:serve": "pm2 start pm2.json --only pwa-local",
    "postlocal": "npm stop",
    "development": "run-s development:*",
    "development:build": "npm install && PWA_ENV=development PWA_PUBLIC_PATH=/build/client/ NODE_ENV=production run-s build:*",
    "development:start": "PWA_SSR=true PORT=1337 pm2 start pm2.json --only pwa",
    "staging": "run-s staging:*",
    "staging:build": "npm install && PWA_ENV=staging PWA_PUBLIC_PATH=//staging.cdn.com/build/client/ NODE_ENV=production PORT=1337 run-s build:*",
    "staging:start": "PWA_SSR=true PORT=1337 pm2 start pm2.json --only pwa",
    "production": "run-s production:*",
    "production:build": "npm install && PWA_ENV=production PWA_PUBLIC_PATH=//production.cdn.com/build/client/ NODE_ENV=production PORT=1337 run-s build:*",
    "production:start": "PWA_SSR=true PORT=1337 pm2 start pm2.json --only pwa",
    "build:clean": "rimraf ./build/{client,server}/*",
    "build:client": "webpack --config ./webpack.client.js --progress",
    "build:server": "webpack --config ./webpack.server.js --progress",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint --ignore-path .gitignore .",
    "lint:stylelint": "stylelint ./client/**/*.css",
    "test": "NODE_ENV=test jest",
    "pm2": "pm2"
  },
  "pre-commit": "lint, test",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "6.23.1",
    "babel-eslint": "7.1.1",
    "babel-jest": "19.0.0",
    "babel-loader": "6.3.2",
    "babel-plugin-lodash": "3.2.11",
    "babel-plugin-transform-react-inline-elements": "6.22.0",
    "babel-plugin-transform-react-remove-prop-types": "0.3.2",
    "babel-preset-env": "1.2.1",
    "babel-preset-react": "6.23.0",
    "babel-preset-stage-1": "6.22.0",
    "bundle-loader": "0.5.5",
    "css-loader": "0.26.2",
    "eslint": "3.17.0",
    "eslint-config-airbnb": "14.1.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "4.0.0",
    "eslint-plugin-react": "6.10.0",
    "file-loader": "0.10.1",
    "isomorphic-style-loader": "1.1.0",
    "jest": "19.0.2",
    "npm-run-all": "4.0.2",
    "pm2": "2.4.2",
    "postcss-loader": "1.3.3",
    "pre-commit": "1.2.2",
    "rimraf": "2.6.1",
    "style-loader": "0.13.2",
    "stylelint": "7.9.0",
    "stylelint-config-standard": "16.0.0",
    "url-loader": "0.5.8",
    "webpack-dev-server": "2.4.1"
  },
  "dependencies": {
    "assets-webpack-plugin": "3.5.1",
    "babel-polyfill": "6.23.0",
    "classnames": "2.2.5",
    "compression": "1.6.2",
    "connect-slashes": "1.3.1",
    "express": "4.15.0",
    "extract-text-webpack-plugin": "2.0.0",
    "helmet": "3.4.1",
    "isomorphic-fetch": "2.2.1",
    "lodash": "4.17.4",
    "moment": "2.17.1",
    "morgan": "1.8.1",
    "nock": "9.0.9",
    "normalize.css": "5.0.0",
    "postcss-cssnext": "2.9.0",
    "postcss-extend": "1.0.5",
    "postcss-import": "9.1.0",
    "postcss-reporter": "3.0.0",
    "postcss-style-guide": "0.13.0",
    "postcss-url": "5.1.2",
    "qs": "6.3.1",
    "react": "15.4.2",
    "react-dom": "15.4.2",
    "react-helmet": "4.0.0",
    "react-redux": "5.0.3",
    "react-router": "3.0.2",
    "redux": "3.6.0",
    "redux-connect": "5.0.0",
    "redux-mock-store": "1.2.2",
    "redux-pack": "0.1.4",
    "redux-segment": "1.5.0",
    "redux-thunk": "2.2.0",
    "sw-precache-webpack-plugin": "0.9.0",
    "webpack": "2.2.1",
    "webpack-bundle-analyzer": "2.3.0",
    "webpack-dashboard": "0.3.0",
    "webpack-node-externals": "1.5.4"
  },
  "jest": {
    "globals": {
      "__BROWSER__": false,
      "__PWA_ENV__": "local",
      "__LOCAL__": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lakshyaranganath/pwa.git"
  },
  "bugs": {
    "url": "https://github.com/lakshyaranganath/pwa/issues"
  },
  "homepage": "https://github.com/lakshyaranganath/pwa#readme"
}
